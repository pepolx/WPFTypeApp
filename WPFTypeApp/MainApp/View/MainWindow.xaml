<Window x:Class="WPFTypeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Type Practice" Height="500" Width="850"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- Style Definitions -->
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="0" Margin="10">
            <Button x:Name="btnStart" Content="Start" Click="btnStart_Click" Margin="5"/>
            <Button x:Name="btnReset" Content="Reset" Click="btnReset_Click" Margin="5"/>
            <!-- Możesz dodać więcej kontrolki tutaj -->
        </StackPanel>

        <Border Background="#FFF3E5F5" CornerRadius="10" Padding="20" Grid.Row="1" Margin="10">
            <TextBlock x:Name="txtDisplay" FontSize="24" FontWeight="Bold" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Border>

        <StatusBar HorizontalAlignment="Stretch" Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="txtStatus" Text="Gotowy do rozpoczęcia"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>